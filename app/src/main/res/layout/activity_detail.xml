<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailActivity">

    <ImageView
        android:id="@+id/tema_utama"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/tema" />

    <ImageView
        android:id="@+id/play"
        android:layout_width="58dp"
        android:layout_height="68dp"
        android:layout_below="@id/tema_utama"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="94dp"
        android:layout_marginTop="-1dp"
        android:layout_marginEnd="88dp"
        android:src="@drawable/play" />

    <ImageView
        android:id="@+id/prev"
        android:layout_width="66dp"
        android:layout_height="384dp"
        android:layout_below="@+id/play"
        android:layout_alignStart="@+id/tema_utama"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="28dp"
        android:layout_marginTop="-226dp"
        android:layout_marginEnd="301dp"
        android:src="@drawable/prev" />

    <ImageView
        android:id="@+id/next"
        android:layout_width="56dp"
        android:layout_height="190dp"
        android:layout_below="@+id/tema_utama"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="-62dp"
        android:layout_marginEnd="43dp"
        android:src="@drawable/next" />

    <TextView
        android:id="@+id/tv_object_putar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/play"
        android:layout_alignEnd="@+id/next"
        android:layout_marginTop="21dp"
        android:layout_marginEnd="-4dp"
        android:text="@string/playsong"
        android:textSize="19sp" />

    <TextView
        android:id="@+id/lyric"
        android:layout_width="382dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_object_putar"
        android:layout_alignStart="@+id/tv_object_putar"
        android:layout_alignEnd="@+id/tv_object_putar"
        android:layout_marginStart="-23dp"
        android:layout_marginTop="26dp"
        android:layout_marginEnd="-25dp"
        android:background="#F18F8F"
        android:text="@string/lyric"
        android:textSize="17sp" />


</RelativeLayout>